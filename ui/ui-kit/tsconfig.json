{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declarationDir": "./dist",
    "outDir": "./dist",
    "paths": {
      "*": [
        "./src/*"
      ],
      "src/*": [
        "./src/*"
      ],
      "test": [
        "./test"
      ],
      "@rill/*": [
        "../*",
        "../*/dist",
        "../*/dist/src",
      ]
    },
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules/",
    "test/",
    "dist/"
  ]
}