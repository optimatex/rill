{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@sheer/*": [
        "packages/*/src",
        "packages/*/dist",
        "packages/*/dist/src"
      ],
    },
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/src",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "packages",
    "projects",
    "config"
  ],
  "exclude": [
    "node_modules"
  ]
}