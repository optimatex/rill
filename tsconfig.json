{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmitOnError": false,
    "types": [
      "node",
      "jest"
    ],
    "skipLibCheck": true,
    "paths": {
      "@rill/*": [
        "packages/*/src",
        "ui/*/src",
      ]
    }
  },
  "include": [
    "packages",
    "projects",
    "config"
  ],
  "exclude": [
    "node_modules"
  ]
}