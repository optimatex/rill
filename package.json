{
	"name": "root",
	"private": true,
	"scripts": {
		"clean": "lerna exec rimraf node_modules --parallel",
		"clean:dist": "lerna exec rimraf dist --parallel",
		"boot": "lerna bootstrap --hoist",
		"testing": "./_devops/testing-pyramid/full-run.sh",
		"dev-server": "./_repo/dev_server.sh",
		"rn": "cd packages/stezor && npm run rn",
		"pod": "cd packages/stezor && cd ios && pod deintegrate && pod install",
		"watchman": "npm watchman watch-del-all && rm -rf /tmp/metro-*",
		"deploy": "./_deployment/deploy-old-site.sh",
		"test": "jest --verbose --detectOpenHandles",
		"test:watch": "jest --watch --onlyChanged --detectOpenHandles --verbose ",
		"postinstall": "husky install",
		"prepublishOnly": "pinst --disable",
		"postpublish": "pinst --enable",
		"lint": "lerna run lint",
		"lint:fix": "lerna run lint:fix --parallel",
		"lint:fix:check": "lerna run lint:fix --bail --parallel",
		"lint:css": "stylelint './packages/*/src/**/*.tsx'",
		"build": "lerna run build --stream",
		"watch": "lerna run watch --stream",
		"rill": "lerna --scope=@sheer/rill run site --stream --",
		"rill:build": "lerna-watch @sheer/rill",
		"rill:e2e": "lerna --scope=@sheer/rill run e2e",
		"ui-stock": "lerna --scope=@sheer/ui-stock run site --stream --",
		"ui-stock:build": "lerna-watch @sheer/ui-stock",
		"ui-stock:e2e": "lerna --scope=@sheer/ui-stock run e2e",
		"entities-stock": "lerna --scope=@sheer/entities-stock run site --stream --",
		"entities-stock:build": "lerna-watch @sheer/entities-stock",
		"entities-stock:e2e": "lerna --scope=@sheer/entities-stock run e2e",
		"web:build": "lerna-watch  @sheer/stezor-old-site",
		"web": "lerna --scope=@sheer/stezor-old-site run site --stream --",
		"android": "lerna --scope=stezor run android --stream --",
		"ios": "lerna --scope=stezor run ios --stream --"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm run test"
		}
	},
	"lint-staged": {
		"*.ts": [
			"tslint",
			"lint",
			"prettier --write",
			"git add"
		]
	},
